extends base.pug

block style
    style
        include ../static/style.css
        include ../static/style.contact.css
block content
    div.container
        h1 Contact Us
        form(action="/contact" method="post" class="form")
            input(type="text" name="name" placeholder="Enter your name" class="items")
            input(type="email" name="email" placeholder="Enter your email" class="items")
            input(type="phone" name="phone" placeholder="Phone Number:" class="items")
            input(type="text" name="Address" placeholder="Enter Address" class="items")
            
            button(class="btn")
                | submit